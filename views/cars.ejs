<%- include('partials/header'); -%>
    <div class="container-fluid d-flex justify-content-center align-items-center flex-column"
        style="background-image: url('images/heading-4-1920x500.jpg');background-position: center;background-repeat: no-repeat;background-size: cover;height: 50vh;width: 100vw;">
        <h3 class="text-center text-danger" style="font-size: 2rem; font-weight: bold;">Our fleet offers a wide variety
            of Cars</h3>

    </div>


    <div class="container d-grid my-5">


        <div class="row g-4">
            <% fleet.forEach(function(item){ %>
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <div class="card w-100">
                        <img src="<%= item.imgURL %>" class="card-img-top img-fluid img-responsive" alt="...">
                        <div class="card-body text-center">

                            <h5 class="card-title">
                                <%= item.carName %>
                            </h5>
                            <a href="/booking" class="btn text-white" style="background-color: rgb(61, 203, 61);;">Book
                                Now : &#8377 <span style="color: yellow;">
                                    <%= item.price %>
                                </span></a>
                            <p class="mt-3" style="font-size: 0.75rem;">
                                <i class="fa-solid fa-suitcase-rolling " style="color: rgb(0, 61, 244) ;"></i>
                                <span>
                                    <%= item.baggage %>
                                </span>
                                <i class="fa-solid fa-chair " style="color: rgb(0, 61, 244);"></i>
                                <span>
                                    <%= item.seats %>
                                </span>
                                <i class="fa-solid fa-gas-pump " style="color: rgb(0, 61, 244);"></i>
                                <span>
                                    <%= item.fuel %>
                                </span>
                                <i class="fa-solid fa-gear" style="color: rgb(0, 61, 244);"></i>
                                <span>
                                    <%= item.transmission %>
                                </span>
                                <i class="fa-solid fa-car" style="color: rgb(0, 61, 244);"></i>
                                <span>
                                    <%= item.type %>
                                </span>
                            </p>


                        </div>
                    </div>
                </div>


                <% }) %>
        </div>




    </div>


    <%- include('partials/footer'); -%>

        </body>

        </html>